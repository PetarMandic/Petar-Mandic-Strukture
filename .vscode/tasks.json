{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C File",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${input:fileName}",
                "-o",
                "${fileBasenameNoExtension}",
                "-g",
                "&&",
                "./${fileBasenameNoExtension}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ],
    "inputs": [
        {
            "id": "fileName",
            "type": "promptString",
            "description": "Enter C file name to compile and run (e.g., zadatak_1.c)"
        }
    ]
}
